<resources>
    <style name="TicTacToeButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textSize">48sp</item> <!-- Larger X and O -->
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/tic_tac_toe_button_border</item>
        <item name="android:fontFamily">@font/press_start_2p</item>
    </style>
    <style name="CardButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:backgroundTint">#adb5bd</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#AF000000</item>
    </style>

    <style name="CardButton_2">
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_rowWeight">1</item>
            <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">3dp</item>
                    <item name="android:fontFamily">@font/press_start_2p</item>
            <item name="android:textSize">20sp</item>
            <item name="android:strokeWidth">10</item>
            <item name="strokeColor">#adb5bd</item>
            <item name="android:background">#adb5bd</item>
            <item name="android:textColor">#000000</item>
    </style>


</resources>
