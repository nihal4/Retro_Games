<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.retroboard">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:roundIcon="@drawable/icon"
        android:label="Retro Games"
        android:theme="@style/Theme.RetroBoardGames">

        <!-- Main Activity (Entry Point) -->
        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- TicTacToe Activity -->
        <activity android:name=".TicTacToeActivity"
            android:exported="true">
            <!-- Add any specific intent-filter if needed -->
        </activity>

        <activity android:name=".MemoryGameActivity"
            android:exported="true">
            <!-- Add any specific intent-filter if needed -->
        </activity>

        <activity android:name=".GameActivity"
            android:exported="true">
            <!-- Add any specific intent-filter if needed -->
        </activity>

        <activity android:name=".WinnerActivity"
            android:exported="true">
            <!-- Add any specific intent-filter if needed -->
        </activity>

    </application>



</manifest>
